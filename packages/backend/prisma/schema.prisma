// Prisma schema for conversation persistence

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Conversation {
  id          String    @id @default(uuid())
  title       String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  userId      String?
  totalCost   Float?    @default(0)
  messages    Message[]
}

model Message {
  id             String     @id @default(uuid())
  conversation   Conversation @relation(fields: [conversationId], references: [id])
  conversationId String
  role           String
  content        String
  model          String?
  parameters     Json?
  tokens         Int?
  cost           Float?
  createdAt      DateTime   @default(now())
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  apiKeys   Json?
  createdAt DateTime @default(now())
}
